pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                dir("backend"){
                    sh "npm install"
                }
            }
        }
        stage("integration tests"){
            steps{
                dir("backend"){
                    sh "npm test"
                }
            }
        }
    }
    post{
        always{
            deleteDir()
        }
    }
}